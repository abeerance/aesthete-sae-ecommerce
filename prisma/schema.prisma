// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id                   String    @id @default(uuid())
  email                String    @unique
  username             String    @unique
  avatarUrl            String?
  password             String
  passwordResetToken   String?
  passwordResetExpires DateTime?
  passwordChangedAt    DateTime?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  // relations
  CartItem CartItems[]
  Order    Orders[]
}

model Products {
  id                  String   @id @default(uuid())
  name                String
  description         Json
  sustainability      Json
  shippgingAndReturns Json
  price               Float
  imageUrl            String
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  // relations
  category   Categories   @relation(fields: [categoryId], references: [id])
  categoryId String
  carts      CartItems[]
  orders     OrderItems[]
}

model Categories {
  id   String @id @default(uuid())
  name String

  // relations
  parent        Categories?  @relation("CategoryToSubcategory", fields: [parentId], references: [id])
  parentId      String?
  subcategories Categories[] @relation("CategoryToSubcategory")
  products      Products[]
}

model CartItems {
  id       String @id @default(uuid())
  quantity Int

  // relations
  product   Products @relation(fields: [productId], references: [id])
  productId String
  user      Users    @relation(fields: [userId], references: [id])
  userId    String
}

model Orders {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())

  // relations
  user   Users        @relation(fields: [userId], references: [id])
  userId String
  items  OrderItems[]
}

model OrderItems {
  id       String @id @default(uuid())
  quantity Int

  // relations
  product   Products @relation(fields: [productId], references: [id])
  productId String
  order     Orders   @relation(fields: [orderId], references: [id])
  orderId   String
}
